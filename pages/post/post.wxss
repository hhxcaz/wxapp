/* pages/post/post.wxss */
page {
  background: #dfdfdf;
}
.swiper-tab {
  display: flex;
  background: #ffffff;
  justify-content: center;
  line-height: 66rpx;
  position: relative;
  z-index: 9;
}
  
.tab-item {
  width: 26%;
  text-align: center;
  font-size: 15px;
  color: #dfdfdf;
  margin: 0 10%;
}

.swiper {
  height: 660rpx;
  background: #dfdfdf;
}
  
.on {
  color: #3da8ff;
  font-weight: 600;
}

textarea{
  width: 96%;
  margin: 2.8% 0;
  padding: 2%;
  background: #ffffff;
}
.tip{
  color: #999;
  font-size: 13px;
  bottom: 6px;
  right: 12px;
  position: absolute;
}
.photo{
  bottom: 50px;
  position: absolute;
  z-index: 999;
}
.location{
  color: #999;
  font-size: 13px;
  bottom: 6px;
  left: 12px;
  position: absolute;
  z-index: 999;
}
.money{
  width: 96%;
  display: flex;
  padding: 2%;
  background: #ffffff;
  color: rgb(255, 101, 101);
}
.money input{
  margin: 0 0 0 2%;
}
.type{
  width: 96%;
  display: flex;
  position: relative;
  border-top: 1px solid rgb(216, 216, 216);
  padding: 2%;
  background: #ffffff;
}
.post-btn{
    width: 100%;
    display: flex;
    position: absolute;
    bottom: 2%;
}
.ang {
  margin: 0 0 0 2px;
  width: 20rpx;
  height: 20rpx;
  transition: all 0.3s ease;
}

.select {
  box-sizing: border-box;
  height: 50rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text {
  padding: 0 12px;
  width: 88px;
  color: #3da8ff;
}
.option_box {
  position: absolute;
  background: #ffffff;
  z-index: 999;
  top: 88rpx;
  width: 28%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  transition: height 0.2s;
}

.option {
  display: block;
  color: #000;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #efefef;
  border-top: 0px solid #efefef;
  padding: 5rpx;
}