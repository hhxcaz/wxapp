/* pages/read/read.wxss */
page{
  background: #dfdfdf;
}
.swiper-tab {
  display: flex;
  background: #ffffff;
  justify-content: center;
  line-height: 66rpx;
  position: relative;
  z-index: 9;
}
  
.tab-item {
  width: 20%;
  text-align: center;
  font-size: 15px;
  color: #dfdfdf;
  margin: 0 10%;
}

.swiper {
  height: 660rpx;
  background: #dfdfdf;
}
  
.on {
  color: #3da8ff;
}
.title{
  margin: 18rpx;
  font-size: 15px;
  color: #666;
}
.typebox{
  background: #fff;
  padding: 18rpx 0;
  display: flex;
  justify-content: space-around;
}
.type{
  width: 100rpx;
  text-align: center;
  font-size: 12px;
}
.typeimg{
  width: 100rpx;
  height: 100rpx;
}
