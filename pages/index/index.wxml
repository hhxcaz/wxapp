<view class="topbox">
  <view class="loc" bindtap="selectorCity">📍{{ locationName }}</view>
  <view class="search">
    <input type="text" confirm-type="search" class="serach-input" placeholder-style="text-align:center"
      placeholder="搜索物品🔍" bindconfirm="searching" />
  </view>
</view>

<view class="swiper-tab">
  <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">寻物启事</view>
  <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">失物招领</view>
</view>
<view class="typebox">
  <view class="type on">
    <image src="../../img/all.png" class="typeimg"></image>
    <text>综合</text>
  </view>
  <view class="type">
    <image src="../../img/moblie.png" class="typeimg"></image>
    <text>手机数码</text>
  </view>
  <view class="type">
    <image src="../../img/wallet.png" class="typeimg"></image>
    <text>卡证钱包</text>
  </view>
  <view class="type">
    <image src="../../img/pet.png" class="typeimg"></image>
    <text>宠物</text>
  </view>
  <view class="type">
    <image src="../../img/other.png" class="typeimg"></image>
    <text>其他</text>
  </view>
</view>

<!--内容主体-->
<swiper style='height:1000px' class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">
  <!-- 寻物启事 -->
  <swiper-item>
  <block wx:for="{{xlist}}" wx:key="index">
      <view class="card">
      <view class="cardtop">
        <view class="card-left">
          <view class="avator">
            <image src="{{item.user.avatar}}" style="width:50px;height:50px"></image>
          </view>
          <view class="username">
            {{item.user.nickname}}
          </view>
          <view class="time">{{item.createTime}}</view>
        </view>
        <view class="card-right">
          <view class="call">联系TA</view>
          <view class="money" wx:if="{{item.reward !== 0}}">酬谢：¥{{item.reward}}</view>
        </view>
      </view>
      <viwe class="info">
        {{item.intro}}
      </viwe>
      </view>
  </block>


